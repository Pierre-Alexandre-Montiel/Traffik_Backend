model Availability {
  id           Int              @id @default(autoincrement())
  availability availabilityList
  Item         Item?
}

model Pull {
  id         Int          @id @default(autoincrement())
  barcodeId  String?
  createdAt  DateTime?    @default(now())
  //Project    Project?
  idItem     Item?        @relation(fields: [barcodeId], references: [id])
  PullUpdate PullUpdate[]
}

model PullUpdate {
  id        String      @id @default(uuid())
  pullId    Int?
  ready     Int?
  out       Int?
  returned  Int?
  worn      Int?
  assets    Bytes?
  createdAt DateTime? @default(now())
  pull      Pull?     @relation(fields: [pullId], references: [id])
}

model Lambda {
  id        String      @id @default(uuid())
  updatedAt DateTime? @updatedAt
  createdAt DateTime? @default(now())
}

enum userStatusList {
  active
  inactive
}

enum userTypeList {
  brand
  showroom
  stylist
  talent
  traffik
}

enum MembershipType {
  mem1
  mem2
  mem3
}

enum PositionType {
